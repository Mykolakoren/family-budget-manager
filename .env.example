# Database Configuration
DATABASE_URL=sqlite:///./budget_manager.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://budget_user:budget_password@localhost:5432/family_budget
POSTGRES_URL=postgresql://budget_user:budget_password@postgres:5432/family_budget

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API for LLM features
OPENAI_API_KEY=sk-your-openai-api-key-here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS (for development)
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# External APIs
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key-optional

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Email (optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password